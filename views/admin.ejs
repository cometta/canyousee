<script src="/jquery.js" ></script>

<form method="post"  class="midslot">
  <input type="hidden" name="_csrf" value="<%= token %>">
  <input type="hidden" name="ans" id="ans"/>
  <input type="hidden" name="link" id="link" value="<%= link %>"/>


<img src="<%= link %>" id="adminswap"class="ui fluid image" alt="Swipe left or right">

<div style="text-align:center">
  <h2>Can you see Volcano eruption?</h2>
</div>


<div class="ui modal active" style="position:relative ">
<div class="actions">


<div class="inblock" style="padding:0.2em">
  <div class="ui blue tag label">Number of players played: 0</div>
</div>
    <button class="ui black button" id='nopeb'>
      Nope
    </button>
    <button class="ui positive right labeled icon button" id='yesb'>
      Yes
      <i class="checkmark icon"></i>
    </button>
      <div>
        Swipe the image left mean no, swipe right mean yes.Admin decide whether player get rewarded
    </div>
    </div>



</div>
</form>


<script>






$(function(){

  $('#nopeb').click(function () {
      $('#ans').val('no');
  });

  $('#yesb').click(function () {
      $('#ans').val('yes');
  });



      $("#adminswap").swipe( {
        allowPageScroll: "auto",
          swipe:function(event, direction, distance, duration, fingerCount, fingerData) {


             if(direction == 'left')
                $('#nopeb').click();
            else if(direction == 'right')
                    $('#yesb').click();

          }
        });
      });



  });

</script>
